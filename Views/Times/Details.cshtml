@model Fut.Models.Time

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Time</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Abrev)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Abrev)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jogadores)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var jogador in Model.Jogadores)
            {
                @Html.DisplayName(jogador.Nome + ", ")
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
